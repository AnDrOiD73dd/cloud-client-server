<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="AuthContoller"
      stylesheets="@auth_style.css">
    <VBox fx:id="signin" alignment="CENTER">
        <TextField fx:id="login" promptText="Логин" HBox.hgrow="ALWAYS"/>
        <PasswordField fx:id="password" promptText="Пароль" onAction="#onClickSignIn"/>
        <Button text="Войти" onAction="#onClickSignIn"/>
    </VBox>
    <padding>
        <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
    </padding>
</VBox>
