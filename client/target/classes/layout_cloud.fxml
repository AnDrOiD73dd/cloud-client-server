<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="rootAnchorPane" stylesheets="@style_cloud.css" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="CloudController">
    <SplitPane fx:id="splitPane" dividerPositions="0.75" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <items>
            <AnchorPane fx:id="tableAnchorPane" minHeight="0.0" minWidth="0.0" prefHeight="300.0" prefWidth="300.0">
                <TableView fx:id="fileTable" prefHeight="300.0" prefWidth="300.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <columns>
                        <TableColumn prefWidth="75.0" text="№" />
                        <TableColumn prefWidth="75.0" text="Имя файла" />
                        <TableColumn prefWidth="75.0" text="Путь" />
                        <TableColumn prefWidth="75.0" text="Размер" />
                        <TableColumn prefWidth="75.0" text="Статус" />
                    </columns>
                </TableView>
            </AnchorPane>
            <AnchorPane fx:id="buttonsAnchorPane" minHeight="0.0" minWidth="0.0">
                <VBox>
                    <Button fx:id="btAdd" onAction="#onClickAdd" prefWidth="70.0" text="Добавить">
                        <VBox.margin>
                            <Insets bottom="5.0" left="5.0" right="5.0" top="30.0" />
                        </VBox.margin>
                    </Button>
                    <Button fx:id="btDelete" onAction="#onClickDelete" prefWidth="70.0" text="Удалить из облака">
                        <VBox.margin>
                            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                        </VBox.margin>
                    </Button>
                    <Button fx:id="btDeleteAll" onAction="#onClickDeleteAll" prefWidth="70.0" text="Удалить полностью">
                        <VBox.margin>
                            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                        </VBox.margin>
                    </Button>
                    <Button fx:id="btDownload" onAction="#onClickDownload" prefWidth="70.0" text="Скачать">
                        <VBox.margin>
                            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                        </VBox.margin>
                    </Button>
                    <Button fx:id="btUpdate" onAction="#onClickUpdate" prefWidth="70.0" text="Обновить на облаке">
                        <VBox.margin>
                            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                        </VBox.margin>
                    </Button>
                </VBox>
            </AnchorPane>
        </items>
    </SplitPane>
</AnchorPane>
